set mbox_type = Maildir
set folder    = "~/Maildir/columbia"
set spoolfile = "+INBOX"
set postponed = "+[Gmail]/Drafts"
set record    = "+[Gmail]/Sent Mail"
set trash     = "+[Gmail]/Trash"
set from      = "Jason Han <jason.han@columbia.edu>"

# https://gitlab.com/muttmua/mutt/-/wikis/MuttGuide/Caching
set message_cachedir = "$XDG_CACHE_HOME/mutt"
set header_cache = "$XDG_CACHE_HOME/mutt"
set mailcap_path = "$XDG_CONFIG_HOME/mailcap"
